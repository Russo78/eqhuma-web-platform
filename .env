# Configuraci√≥n general
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://mongodb:27017/eqhuma

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# API Manager
API_MANAGER_PORT=3001

# Servicios
COURSES_SERVICE_PORT=5001
PAYMENTS_SERVICE_PORT=5002
PALENCA_SERVICE_PORT=5003
APIMARKET_SERVICE_PORT=5004
WEBINARS_SERVICE_PORT=5005

# Frontend
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# STP (Sistema de Transferencias y Pagos)
STP_API_URL=https://demo.stpmex.com/speiws/rest
STP_INSTITUTION_CODE=90646
STP_PRIVATE_KEY=/app/certs/stp_key.pem
STP_CERTIFICATE=/app/certs/stp_cert.pem
STP_ACCOUNT_KEY=test_account_key
STP_WEBHOOK_SECRET=your_webhook_secret

# Palenca API
PALENCA_API_URL=https://api.palenca.com/v1
PALENCA_API_KEY=your_palenca_api_key

# APIMarket
APIMARKET_URL=https://api.apimarket.mx/v1
APIMARKET_API_KEY=your_apimarket_api_key
APIMARKET_SECRET_KEY=your_apimarket_secret_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined
