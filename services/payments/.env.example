# Server Configuration
PORT=5002
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/eqhuma_payments

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_API_URL=https://api-m.sandbox.paypal.com
PAYPAL_RETURN_URL=http://localhost:3000/pago/confirmacion
PAYPAL_CANCEL_URL=http://localhost:3000/pago/cancelado
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here
EMAIL_FROM=Eqhuma Web <noreply@eqhuma.com>

# Logging Configuration
LOG_LEVEL=debug

# API Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Service URLs
COURSES_SERVICE_URL=http://localhost:5001
WEBINARS_SERVICE_URL=http://localhost:5003
AUTH_SERVICE_URL=http://localhost:5000

# Webhook URLs
WEBHOOK_SUCCESS_URL=http://localhost:3000/pago/confirmacion
WEBHOOK_CANCEL_URL=http://localhost:3000/pago/cancelado
WEBHOOK_NOTIFICATION_URL=http://localhost:5002/api/v1/payments/webhook

# Tax Configuration
TAX_RATE=0.16 # 16% IVA for Mexico

# Invoice Configuration
INVOICE_PREFIX=EQH
INVOICE_STARTING_NUMBER=1000

# Timeout Configuration
REQUEST_TIMEOUT=30000 # 30 seconds
PAYMENT_SESSION_TIMEOUT=3600000 # 1 hour

# Feature Flags
ENABLE_PAYPAL=true
ENABLE_OXXO=true
ENABLE_SPEI=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_AUTOMATIC_INVOICING=true
ENABLE_PAYMENT_REMINDERS=true

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
NOTIFICATION_DELAY=300000 # 5 minutes

# Security Configuration
ENABLE_REQUEST_SIGNING=true
REQUEST_SIGNING_SECRET=your_signing_secret_here
ENABLE_IP_FILTERING=true
MAX_FAILED_ATTEMPTS=5
BLOCK_DURATION=3600 # 1 hour in seconds
