# Entorno
NODE_ENV=development

# Servidor
PORT=5000
HOST=localhost

# Base de datos
MONGODB_URI=mongodb://localhost:27017/eqhuma_courses
MONGODB_URI_TEST=mongodb://localhost:27017/eqhuma_courses_test

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Cors
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_PATH=./logs

# API
API_PREFIX=/api/v1
API_VERSION=1.0.0
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=15

# Cache
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# AWS S3 (para almacenamiento de archivos)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket-name

# Cloudinary (para imágenes)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Métricas y Monitoreo
ENABLE_METRICS=true
METRICS_PORT=9100

# Seguridad
BCRYPT_SALT_ROUNDS=12
ENABLE_RATE_LIMIT=true
ENABLE_HELMET=true
ENABLE_CORS=true
TRUSTED_PROXIES=loopback,linklocal,uniquelocal

# Servicios externos
AUTH_SERVICE_URL=http://localhost:4000
PAYMENT_SERVICE_URL=http://localhost:4001
NOTIFICATION_SERVICE_URL=http://localhost:4002

# Webhooks
WEBHOOK_SECRET=your_webhook_secret_here

# Límites
MAX_FILE_SIZE=5242880
MAX_REQUEST_SIZE=10485760
MAX_COURSES_PER_USER=10
MAX_LESSONS_PER_COURSE=50

# Características
ENABLE_COURSE_REVIEWS=true
ENABLE_COURSE_RATINGS=true
ENABLE_COURSE_COMMENTS=true
ENABLE_COURSE_CERTIFICATES=true

# Notificaciones
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass

# Caché y Optimización
ENABLE_RESPONSE_CACHE=true
CACHE_DURATION=3600
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6

# Documentación API
SWAGGER_ENABLED=true
SWAGGER_TITLE=Courses Service API
SWAGGER_DESCRIPTION=API Documentation for Courses Service
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=/api-docs

# Testing
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpass123

# Mantenimiento
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Sistema en mantenimiento programado
